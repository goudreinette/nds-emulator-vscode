{
  "name": "nds-emulatorjs-vscode",
  "displayName": "nds-emulatorjs-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "nds-emulatorjs-vscode.preview",
        "displayName": "NDS Emulator",
        "selector": [
          {
            "filenamePattern": "*.nds"
          }
        ]
      }
    ],

    "commands": [
      {
        "command": "nds-emulatorjs-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "nds-emulatorjs-vscode.openNDSView",
        "title": "Open NDS View"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
